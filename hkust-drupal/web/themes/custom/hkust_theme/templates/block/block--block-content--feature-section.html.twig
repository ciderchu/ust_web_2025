{#
/**
 * @file
 * Theme override to display Feature Section blocks.
 */
#}
{% set layout_type = '' %}
{% if content.field_layout_type[0] %}
  {% set layout_type = content.field_layout_type[0]['#markup'] %}
{% endif %}

<div{{ attributes.addClass('feature-section', 'py-5') }}>
  <div class="container">
    <div class="row align-items-center">
      {% if layout_type == 'image_left' %}
        <div class="col-md-6">
          <div class="section-image">
            {{ content.field_feature_image|without('field_label') }}
          </div>
        </div>
        <div class="col-md-6">
          <h2 class="section-title mb-4">{{ content.field_feature_title|without('field_label') }}</h2>
          <div class="section-content">
            {{ content.field_feature_content|without('field_label') }}
          </div>
        </div>
      {% else %}
        <div class="col-md-6">
          <h2 class="section-title mb-4">{{ content.field_feature_title|without('field_label') }}</h2>
          <div class="section-content">
            {{ content.field_feature_content|without('field_label') }}
          </div>
        </div>
        <div class="col-md-6">
          <div class="section-image">
            {{ content.field_feature_image|without('field_label') }}
          </div>
        </div>
      {% endif %}
    </div>
  </div>
</div>